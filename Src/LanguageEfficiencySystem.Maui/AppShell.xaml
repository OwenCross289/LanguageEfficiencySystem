<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LanguageEfficiencySystem.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LanguageEfficiencySystem.Maui.Views"
    FlyoutBehavior="Disabled">

    <TabBar>
        <Tab>
            <ShellContent
                Title="Maui"
                ContentTemplate="{DataTemplate views:CalculatorView}"
                Route="CalculatorView" />
        </Tab>
        <Tab>
            <ShellContent
                Title="Maui Hybrid"
                ContentTemplate="{DataTemplate views:BlazorCalculatorView}"
                Route="BlazorCalculatorView" />
        </Tab>
    </TabBar>
</Shell>
